<UserControl x:Class="MyToDo.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyToDo.Views"
             xmlns:md ="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:pass ="clr-namespace:MyToDo.Extensions"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             Height="350" Width="600" mc:Ignorable="d">
    <!--设置该弹窗界面的弹出位置等-->
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="Width" Value="600"/>
            <Setter Property="Height" Value="350"/>
            <Setter Property="SizeToContent" Value="WidthAndHeight"/>
            <Setter Property="ResizeMode" Value="NoResize"/>
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen"/>
        </Style>
    </prism:Dialog.WindowStyle>
    
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Source="/images/login.png"  Grid.Column="0" Margin="10"/>
        <md:Snackbar x:Name="LoginSnackBar" Panel.ZIndex="1" MessageQueue="{md:MessageQueue}" Grid.ColumnSpan="2"/>

        <md:Transitioner Grid.Column="1" SelectedIndex="{Binding SelectedIndex}">
            <md:TransitionerSlide><!--第一页登录-->
                <DockPanel  VerticalAlignment="Center" Margin="15">
                    <TextBlock Text="欢迎使用" FontSize="22" FontStyle="Normal" FontWeight="Bold" DockPanel.Dock="Top" Margin="0,0,0,5"/>
                    <TextBox FontSize="14" FontStyle="Normal" FontWeight="Bold" DockPanel.Dock="Top" Text="{Binding Account,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                             md:HintAssist.Hint="请输入账号" md:TextFieldAssist.HasClearButton="True" Margin="0,5,0,5"/>
                    <PasswordBox FontSize="14" FontStyle="Normal" FontWeight="Bold" DockPanel.Dock="Top"  pass:PassWordExtensions.PassWord="{Binding PassWord,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                  md:HintAssist.Hint="请输入密码" md:TextFieldAssist.HasClearButton="True" Margin="0,5,0,5">
                        <i:Interaction.Behaviors>
                            <pass:PasswordBehavior/>
                        </i:Interaction.Behaviors>
                    </PasswordBox>
                    <TextBox FontSize="14" FontStyle="Normal" FontWeight="Bold" DockPanel.Dock="Top" Text="{Binding UserName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                             md:HintAssist.Hint="请输入用户名" md:TextFieldAssist.HasClearButton="True" Margin="0,5,0,5"/>
                    <Button Content="登录" FontSize="18" FontStyle="Normal" FontWeight="Bold" DockPanel.Dock="Top" Margin="0,8,0,5"
                            Command="{Binding ExecuteCommand}" CommandParameter="Login"/>
                    
                    <DockPanel LastChildFill="False" >
                        <TextBlock Text="注册账号" FontSize="14" FontStyle="Normal" FontWeight="Bold" Margin="0,5,0,0">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding ExecuteCommand}" CommandParameter="Go"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBlock>
                        <!--<TextBlock Text="忘记密码？" FontSize="14" FontStyle="Normal" FontWeight="Bold" Margin="0,2,0,0" DockPanel.Dock="Right"/>-->
                        <CheckBox Content="记住账号" FontSize="14" FontStyle="Normal" FontWeight="Bold" 
                                  Margin="0,0,0,0" DockPanel.Dock="Right" IsChecked="{Binding RememberMe}"/>
                    </DockPanel>

                </DockPanel>
            </md:TransitionerSlide>

            <md:TransitionerSlide><!--第二页注册-->
                <DockPanel VerticalAlignment="Center" Margin="5">
                    <StackPanel>
                        <TextBlock Text="注册账号" FontSize="22" FontStyle="Normal" FontWeight="Bold"/>
                        <TextBox Text="{Binding UserDto.Account}" Margin="0,5" md:HintAssist.Hint="请输入账号(无限制)" md:TextFieldAssist.HasClearButton="True"
                                 FontSize="14" FontStyle="Normal" FontWeight="Bold" DockPanel.Dock="Top" />
                        <TextBox Text="{Binding UserDto.UserName}" Margin="0,5" md:HintAssist.Hint="请输入用户名(名字)" md:TextFieldAssist.HasClearButton="True"
                                 FontSize="14" FontStyle="Normal" FontWeight="Bold"/>
                        <PasswordBox FontSize="14" FontStyle="Normal" FontWeight="Bold" DockPanel.Dock="Top"  pass:PassWordExtensions.PassWord="{Binding UserDto.PassWord,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                     md:HintAssist.Hint="请输入密码(无限制)" md:TextFieldAssist.HasClearButton="True" Margin="0,5,0,5">
                            <i:Interaction.Behaviors>
                                <pass:PasswordBehavior/>
                            </i:Interaction.Behaviors>
                        </PasswordBox>
                        <PasswordBox FontSize="14" FontStyle="Normal" FontWeight="Bold" DockPanel.Dock="Top"  pass:PassWordExtensions.PassWord="{Binding UserDto.NewpassWord,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                     md:HintAssist.Hint="请再次输入密码" md:TextFieldAssist.HasClearButton="True" Margin="0,5,0,5">
                            <i:Interaction.Behaviors>
                                <pass:PasswordBehavior/>
                            </i:Interaction.Behaviors>
                        </PasswordBox>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="注册账号" FontSize="16" FontStyle="Normal" FontWeight="Bold" DockPanel.Dock="Top"
                                    Command="{Binding ExecuteCommand}" CommandParameter="Resgiter" Margin="0,5,0,0" Width="100"/>
                            <Button Content="返回登录" FontSize="16" FontStyle="Normal" FontWeight="Bold" DockPanel.Dock="Top"
                                    Command="{Binding ExecuteCommand}" CommandParameter="Return" Margin="30,5,0,0" Width="100"/>
                        </StackPanel>
                    </StackPanel>
                </DockPanel>
            </md:TransitionerSlide>
        </md:Transitioner>
    </Grid>
</UserControl>
