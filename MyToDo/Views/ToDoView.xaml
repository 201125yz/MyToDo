<UserControl x:Class="MyToDo.Views.ToDoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i ="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:MyToDo.Views"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converter ="clr-namespace:MyToDo.Common.converter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <converter:IntToVisibilityConverter x:Key="IntToVisibility"/>
    </UserControl.Resources>
    <md:DialogHost>
        <md:DrawerHost IsRightDrawerOpen="{Binding IsRightDrawerOpen}">
            <md:DrawerHost.RightDrawerContent>
                <DockPanel Width="300">
                    <StackPanel>
                        <TextBlock Text="添加待办" FontSize="20" FontWeight="Bold" Margin="10"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="状态: " FontSize="17" FontWeight="Bold" Margin="10"/>
                            <ComboBox FontSize="17" FontWeight="Bold" Width="100"  SelectedIndex="{Binding CurrentDto.Status}">
                                <ComboBoxItem>待办</ComboBoxItem>
                                <ComboBoxItem>已完成</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                        <TextBox FontSize="17"  Margin="10" 
                                 md:HintAssist.Hint="请输入待办概要"
                                 FontStyle="Normal"
                                 md:TextFieldAssist.HasClearButton="True"
                                 Text="{Binding CurrentDto.Title}"/>
                        <TextBox FontSize="17"  Margin="10" MinHeight="100"
                                 md:HintAssist.Hint="请输入待办内容"
                                 md:TextFieldAssist.HasClearButton="True"
                                 AcceptsReturn="True" TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto" Padding="5"
                                 Text="{Binding CurrentDto.Content}"/>
                        <Button Content="添加到待办" FontSize="15"  Width="250" Command="{Binding ExcuteTodoCommand}" CommandParameter="保存"/>
                    </StackPanel>
                </DockPanel>
            </md:DrawerHost.RightDrawerContent>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--第一行内容-->
                <StackPanel Orientation="Horizontal">
                    <TextBox Width="200" Margin="10" FontSize="16" Text="{Binding Search, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             md:HintAssist.Hint="查找待办事项..." md:TextFieldAssist.HasClearButton="True">
                        <TextBox.InputBindings><!--设置回车确定搜索功能-->
                            <KeyBinding Key="Enter" Command="{Binding ExcuteTodoCommand}" CommandParameter="搜索"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    <Button Content="搜索" CommandParameter="搜索" Command="{Binding ExcuteTodoCommand}" Margin="5,0,10,0" Height="30" Width="60"/>
                    <TextBlock Text="筛选: " FontSize="16" VerticalAlignment="Center" FontWeight="Bold"/>
                    <ComboBox Width="70"  FontSize="14" SelectedIndex="{Binding SelectedIndex}">
                        <ComboBoxItem>全部</ComboBoxItem>
                        <ComboBoxItem>待办</ComboBoxItem>
                        <ComboBoxItem>已完成</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                <Button Content="+ 添加待办" Width="110" HorizontalAlignment="Right" Margin="0,0,10,0" Command="{Binding ExcuteTodoCommand}" CommandParameter="新增"/>
                
                <!--同样是第二行内容，用转换器进行显示与隐藏-->
                <StackPanel Grid.Row="1" VerticalAlignment="Center" Visibility="{Binding TodoDtos.Count, Converter={StaticResource IntToVisibility}}">
                    <MediaElement Source="images/todo.mp4" Width="500" Height="300" 
                                  x:Name="MyMediaElement"
                                  LoadedBehavior="Manual" 
                                  UnloadedBehavior="Stop" 
                                  Stretch="Uniform"
                                  Volume="0"
                                  MediaEnded="MediaElement_MediaEnded"/>
                    <TextBlock Text="当个事儿办！！！" FontSize="22" HorizontalAlignment="Center" Margin="0,10" FontStyle="Normal"/>
                </StackPanel>
                
                <!--第二行内容-->
                <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
                    <ItemsControl ItemsSource="{Binding TodoDtos}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <md:TransitioningContent OpeningEffect="{md:TransitionEffect Kind=ExpandIn}">
                                    <Border Style="{StaticResource TaskBarStyle }" Height="200" Width="200" Margin="10">
                                        <i:Interaction.Triggers><!--对待办内容设置触发器-->
                                            <i:EventTrigger EventName="MouseLeftButtonUp">
                                                <i:InvokeCommandAction 
                                                   CommandParameter="{Binding}"
                                                   Command="{Binding DataContext.SelectedCommand, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ItemsControl}}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                        <Grid>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Title}" Foreground="White" FontSize="17" FontWeight="Bold" Margin="10,5"/>
                                                <TextBlock Text="{Binding Content}" Foreground="White" FontSize="17" FontWeight="Bold" Margin="10,10"/>
                                            </StackPanel>
                                            <DockPanel LastChildFill="False">
                                                <md:PopupBox DockPanel.Dock="Right" VerticalAlignment="Top" Margin="10,5">
                                                    <Button Content="删除" 
                                                            CommandParameter="{Binding}"
                                                            Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ItemsControl}}"/>
                                                </md:PopupBox>
                                            </DockPanel>
                                            <Canvas ClipToBounds="True">
                                                <Border Canvas.Top="10" Canvas.Right="-50" Width="120" Height="120" Background="#FFFFFF" CornerRadius="100" Opacity="0.1"/>
                                                <Border Canvas.Top="80" Canvas.Right="-30" Width="120" Height="120" Background="#FFFFFF" CornerRadius="100" Opacity="0.1"/>
                                            </Canvas>
                                        </Grid>
                                    </Border>
                                </md:TransitioningContent>
                                
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

            </Grid>
            
        </md:DrawerHost>
    </md:DialogHost>
    
</UserControl>
